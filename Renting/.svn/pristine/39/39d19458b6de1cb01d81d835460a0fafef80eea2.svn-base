<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_bg_border"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:background="@drawable/voiture_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/voiture_width"
                android:layout_height="wrap_content"
                android:src="@drawable/voiture1" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="description" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.93"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="15dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" >

                <TextView
                    android:id="@+id/patern_main_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:textSize="23dp"
                    android:textColor="@color/blue_logo" />

                <TextView
		            android:id="@+id/main_flech"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="8dp"
		            android:layout_marginRight="8dp"
		            android:textSize="22dp"
		            android:textColor="@color/blue_logo"
		            android:text="\ue804" />

                <TextView
                    android:id="@+id/patern_main_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textSize="23dp"
                    android:textColor="@color/blue_logo" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entre le" />
                
                <TextView
                    android:id="@+id/main_date_debut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="18 déc" />
                
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="et le" />
                
                <TextView
                    android:id="@+id/main_date_fin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:text="23 déc" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/main_euro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1€"
                android:textColor="@color/blue_logo"
                android:textStyle="bold"
                android:textSize="23dp" />

            <Button
                android:id="@+id/main_voir"
                android:layout_width="@dimen/main_btn_voir_width"
                android:layout_height="@dimen/main_btn_voir_height"
                android:text="Voir"
                android:background="@drawable/main_bg_btn_voir"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
